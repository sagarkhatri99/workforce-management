# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb://admin:YOUR_PASSWORD@localhost:27017/workforce?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis (Upstash) - Get from https://upstash.com
REDIS_URL=

# Email (Resend) - Get from https://resend.com
RESEND_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# Firebase Cloud Messaging (FCM) - Get from Firebase Console
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Azure VM Configuration (for deployment)
VM_HOST=
VM_USER=
VM_SSH_KEY=
