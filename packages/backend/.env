# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
# Default to local mongodb if not provided
MONGODB_URI=mongodb://localhost:27017/workforce-mgmt

# JWT Configuration
JWT_SECRET=dev-secret-12345
JWT_REFRESH_SECRET=dev-refresh-secret-12345
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis (Optional in dev if logic handles it)
REDIS_URL=redis://localhost:6379

# Email
FROM_EMAIL=noreply@workforce.dev

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
